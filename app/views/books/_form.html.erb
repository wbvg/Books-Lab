<%= form_for @book do |f| %>

  <%= f.label :title %><br/>
  <%= f.text_area :title %><br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description %> <br/>
   <%= f.label :isbn %><br/>
  <%= f.text_area :isbn %> <br/>
  <%= f.label :image %><br/>
  <%= f.text_area :image %> <br/>

  <%= f.label :author_id %>
  <%= f.select :author_id, Author.all.map {|author| [author.name, author.id]},
   :include_blank => true, :prompt => 'select author' %><br/>

  <%= f.submit %>
  <% end %>